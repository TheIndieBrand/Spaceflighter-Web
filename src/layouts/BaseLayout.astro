---
export interface Props {
    title: string;
}

const { title } = Astro.props;

import 'bootstrap/dist/css/bootstrap.min.css';
import 'bootstrap-icons/font/bootstrap-icons.css';
---
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

        <title>{title}</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/parallaxx-js/dist/parallax.css"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/default.min.css">

        <style is:global>
            body {
                font-family: 'Roboto', sans-serif;
                width: 100%;
                height: 100%;
            }

            h1, h2 {
                text-shadow: 5px 10px 100px rgba(103, 168, 221, 0.6);
            }

            .text-secondary {
                color: rgba(200, 200, 200, 0.8) !important;
            }

            footer {
                background-color: #343a40;
                color: #fff;
                padding: 3rem 0;
            }

            .social-icons a {
                font-size: 1.25rem;
            }
        </style>
    </head>

    <body>
        <slot />

        <footer class="mt-auto">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <h5>Sobre nosotros</h5>
                        <p>TIB es una organización cuyo enfoque es desarrollar aplicaciones para la comunidad</p>
                        <p>Spaceflighter · 2025 - Desarrollado por <strong>Ether</strong></p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Enlaces rápidos</h5>
                        <ul class="list-unstyled">
                            <li><a href="/" class="text-decoration-none text-white">Inicio</a></li>
                            <li><a href="/wiki/1.%20Introduccion" class="text-decoration-none text-white">Wiki</a></li>
                            <li><a href="/policy-of-privacy" class="text-decoration-none text-white">Política de Privacidad</a></li>
                            <li><a href="/terms-of-service" class="text-decoration-none text-white">Términos del Servicio</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Síguenos</h5>
                        <ul class="list-inline social-icons">
                            <li class="list-inline-item"><a target="_blank" href="https://discord.gg/nt9C96uHRb" class="text-white"><i class="bi bi-discord"></i></a></li>
                            <li class="list-inline-item"><a target="_blank" href="https://www.youtube.com/@theindiebrand3019" class="text-white"><i class="bi bi-youtube"></i></a></li>
                            <li class="list-inline-item"><a target="_blank" href="https://github.com/devEthan6737" class="text-white"><i class="bi bi-github"></i></a></li>
                        </ul>
                    </div>
                </div>
                <hr class="mb-4">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p>&copy; The Indie Brand, 2022 - 2025</p>
                    </div>
                </div>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/parallaxx-js/dist/parallax.js"></script>

    </body>
</html>